{
  "name": "no-smoking",
  "version": "1.0.0",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^13.5.0",
    "auto-launch": "^5.0.5",
    "babel-plugin-macros": "^3.1.0",
    "custom-electron-titlebar": "^4.1.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "patch-package": "^6.4.7",
    "promise-ratelimit": "^0.0.3",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-localization": "^1.0.18",
    "react-router-dom": "^6.2.1",
    "react-scripts": "5.0.0",
    "web-vitals": "^2.1.4"
  },
  "main": "public/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently --kill-others \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron": "wait-on tcp:3000 && electron --enable-transparent-visuals   .",
    "electron:build": "npm run build &&   electron-builder -c.extraMetadata.main=build/main.js"
  },
  "proxy": "http://localhost:5000",
  "build": {
    "icon": "build/icon.png",
    "asar": false,
    "extends": null,
    "appId": "com.mediatech.nosmoking",
    "productName": "لا للتدخين",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.8",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^17.0.1",
    "electron-builder": "^22.14.13",
    "postcss": "^8.4.16",
    "wait-on": "^6.0.1"
  }
}
